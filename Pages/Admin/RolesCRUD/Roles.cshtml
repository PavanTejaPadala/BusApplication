@page
@model Assignment_BusApplication.Pages.Admin.RolesCRUD.RolesModel
@{
    ViewData["Title"] = "Roles";
}
<div class="container transparent-container">
<h1>Application Roles</h1>
<p>
    <a asp-page="RolesCreation"> Create Role</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Role Id</th>
            <th>Role Name</th>
            <th>Normalize Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>@role.NormalizedName</td>
            </tr>
        }
    </tbody>
</table>
</div>
